{
  "name": "sicca",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev:senate": "pnpm run --filter @sicca/senate dev",
    "dev:node-server": "pnpm run --filter @sicca/node-server serve",
    "build": "pnpm run --filter @sicca/rollup build",
    "command": "pnpm run --filter @sicca/rollup command",
    "esbuild": "pnpm run --filter @sicca/rollup esbuild",
    "buildServer": "pnpm run --filter @sicca/rollup buildServer",
    "dev": "turbo dev",
    "preinstall": "npx only-allow pnpm",
    "dev:esbuild": "pnpm run --filter @sicca/esbuild dev",
    "deploy:esbuild": "pnpm run --filter @sicca/esbuild deploy",
    "prettier:esbuild": "pnpm run --filter @sicca/esbuild prettier",
    "eslint:esbuild": "pnpm run --filter @sicca/esbuild eslint",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx, less, vue, json}": [
      "eslint --fix",
      "prettier --write",
      "git add ."
    ]
  }
}
